{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "declaration": false,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "jsx": "react",
    "lib": [
      "ES6",
      "ES7",
      "ES2019",
      "dom"
    ],
    "module": "CommonJS",
    "moduleResolution": "node",
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "outDir": "dist",
    "preserveConstEnums": true,
    "removeComments": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "target": "ES5"
  },
  "exclude": [
    "node_modules",
    "**/*.css.js"
  ],
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "server.ts",
    "serverSetup.js",
    "constants.js",
    "src/client/components/QrCode.js"
  ],
  "ts-standard": {
    "ignore": [
      "**/*.js"
    ]
  }
}
